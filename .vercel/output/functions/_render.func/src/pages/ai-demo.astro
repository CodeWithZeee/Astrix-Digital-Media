---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<style>
/* Theme-adaptive styles for the AI demo page */
.demo-hero {
  background: linear-gradient(to bottom right, #ffffff, #f8fafc, #ffffff);
  transition: background 0.3s ease;
}

:global(html.dark) .demo-hero {
  background: linear-gradient(to bottom right, #000000, #1a1a1a, #000000);
}

.video-container {
  position: relative;
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

:global(html.dark) .video-container {
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.video-container iframe {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 16px;
}

.demo-content {
  transition: color 0.3s ease;
}

:global(html.dark) .demo-content {
  color: #ffffff;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 4rem;
}

.feature-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
  padding: 2rem;
  transition: all 0.3s ease;
}

:global(html.dark) .feature-card {
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.feature-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

:global(html.dark) .feature-card:hover {
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.feature-icon {
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #a259ec, #06b6d4);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1rem;
}

.feature-icon svg {
  width: 30px;
  height: 30px;
  color: white;
}

.cta-section {
  background: linear-gradient(135deg, #f8fafc, #ffffff);
  transition: background 0.3s ease;
}

:global(html.dark) .cta-section {
  background: linear-gradient(135deg, #1a1a1a, #000000);
}

.cta-button {
  background: linear-gradient(135deg, #a259ec, #06b6d4);
  color: white;
  padding: 1rem 2rem;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
  display: inline-block;
  margin-top: 1rem;
}

.cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(162, 89, 236, 0.3);
}
</style>

