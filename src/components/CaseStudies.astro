<section id="case-studies" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Success Stories
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        See how businesses across different industries have transformed their operations 
        and accelerated growth with our AI infrastructure.
      </p>
    </div>

    <!-- Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="filter-btn active bg-primary-600 text-white px-6 py-2 rounded-full hover:bg-primary-700 transition-colors duration-200" data-filter="all">
        All Industries
      </button>
      <button class="filter-btn bg-gray-200 text-gray-700 px-6 py-2 rounded-full hover:bg-gray-300 transition-colors duration-200" data-filter="local-services">
        Local Services
      </button>
      <button class="filter-btn bg-gray-200 text-gray-700 px-6 py-2 rounded-full hover:bg-gray-300 transition-colors duration-200" data-filter="clinics">
        Healthcare
      </button>
      <button class="filter-btn bg-gray-200 text-gray-700 px-6 py-2 rounded-full hover:bg-gray-300 transition-colors duration-200" data-filter="agencies">
        Agencies
      </button>
    </div>

    <!-- Case Studies Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Case Study 1 - Local Services -->
      <div class="case-study bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300" data-category="local-services">
        <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2"></div>
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="bg-blue-100 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Elite Plumbing Services</h3>
              <p class="text-sm text-gray-600">Local Services</p>
            </div>
          </div>
          
          <div class="mb-4">
            <h4 class="font-semibold text-gray-900 mb-2">Challenge</h4>
            <p class="text-sm text-gray-600 mb-4">
              Missing 60% of after-hours calls, slow response times, and manual scheduling causing customer frustration.
            </p>
            
            <h4 class="font-semibold text-gray-900 mb-2">Solution</h4>
            <p class="text-sm text-gray-600 mb-4">
              Implemented 24/7 AI receptionist with emergency call routing and automated scheduling system.
            </p>
            
            <h4 class="font-semibold text-gray-900 mb-2">Results</h4>
            <div class="grid grid-cols-2 gap-4 text-center">
              <div class="bg-green-50 p-3 rounded-lg">
                <div class="text-lg font-bold text-green-600">+250%</div>
                <div class="text-xs text-green-700">Lead Capture</div>
              </div>
              <div class="bg-blue-50 p-3 rounded-lg">
                <div class="text-lg font-bold text-blue-600">95%</div>
                <div class="text-xs text-blue-700">Customer Satisfaction</div>
              </div>
            </div>
          </div>
          
          <blockquote class="text-sm italic text-gray-600 border-l-4 border-blue-500 pl-4">
            "Our AI receptionist never sleeps. We've captured more emergency calls in 3 months than we did all last year."
            <footer class="text-xs text-gray-500 mt-2">- Mike Johnson, Owner</footer>
          </blockquote>
        </div>
      </div>

      <!-- Case Study 2 - Healthcare -->
      <div class="case-study bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300" data-category="clinics">
        <div class="bg-gradient-to-r from-green-500 to-green-600 h-2"></div>
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="bg-green-100 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Wellness Family Clinic</h3>
              <p class="text-sm text-gray-600">Healthcare</p>
            </div>
          </div>
          
          <div class="mb-4">
            <h4 class="font-semibold text-gray-900 mb-2">Challenge</h4>
            <p class="text-sm text-gray-600 mb-4">
              Overwhelmed staff spending 4+ hours daily on appointment scheduling and patient follow-ups.
            </p>
            
            <h4 class="font-semibold text-gray-900 mb-2">Solution</h4>
            <p class="text-sm text-gray-600 mb-4">
              Deployed AI for appointment scheduling, patient reminders, and automated follow-up care instructions.
            </p>
            
            <h4 class="font-semibold text-gray-900 mb-2">Results</h4>
            <div class="grid grid-cols-2 gap-4 text-center">
              <div class="bg-green-50 p-3 rounded-lg">
                <div class="text-lg font-bold text-green-600">-75%</div>
                <div class="text-xs text-green-700">No-Shows</div>
              </div>
              <div class="bg-blue-50 p-3 rounded-lg">
                <div class="text-lg font-bold text-blue-600">+40%</div>
                <div class="text-xs text-blue-700">Patient Capacity</div>
              </div>
            </div>
          </div>
          
          <blockquote class="text-sm italic text-gray-600 border-l-4 border-green-500 pl-4">
            "Our staff can now focus on patient care instead of administrative tasks. It's been transformational."
            <footer class="text-xs text-gray-500 mt-2">- Dr. Sarah Chen, MD</footer>
          </blockquote>
        </div>
      </div>

      <!-- Case Study 3 - Agencies -->
      <div class="case-study bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300" data-category="agencies">
        <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-2"></div>
        <div class="p-6">
          <div class="flex items-center mb-4">
            <div class="bg-purple-100 w-12 h-12 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Digital Growth Agency</h3>
              <p class="text-sm text-gray-600">Marketing Agency</p>
            </div>
          </div>
          
          <div class="mb-4">
            <h4 class="font-semibold text-gray-900 mb-2">Challenge</h4>
            <p class="text-sm text-gray-600 mb-4">
              Inconsistent lead qualification process and manual client onboarding taking weeks to complete.
            </p>
            
            <h4 class="font-semibold text-gray-900 mb-2">Solution</h4>
            <p class="text-sm text-gray-600 mb-4">
              Implemented AI-powered lead scoring, automated proposal generation, and streamlined client onboarding.
            </p>
            
            <h4 class="font-semibold text-gray-900 mb-2">Results</h4>
            <div class="grid grid-cols-2 gap-4 text-center">
              <div class="bg-green-50 p-3 rounded-lg">
                <div class="text-lg font-bold text-green-600">+180%</div>
                <div class="text-xs text-green-700">Qualified Leads</div>
              </div>
              <div class="bg-blue-50 p-3 rounded-lg">
                <div class="text-lg font-bold text-blue-600">-80%</div>
                <div class="text-xs text-blue-700">Onboarding Time</div>
              </div>
            </div>
          </div>
          
          <blockquote class="text-sm italic text-gray-600 border-l-4 border-purple-500 pl-4">
            "We've scaled from 10 to 50 clients without adding staff. The AI handles everything seamlessly."
            <footer class="text-xs text-gray-500 mt-2">- Alex Rodriguez, CEO</footer>
          </blockquote>
        </div>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">Ready to Write Your Success Story?</h3>
      <a href="#contact" class="bg-primary-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-700 transition-colors duration-200 inline-block">
        Start Your Project
      </a>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const caseStudies = document.querySelectorAll('.case-study');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const filter = this.getAttribute('data-filter');
        
        // Update active button
        filterBtns.forEach(b => {
          b.classList.remove('active', 'bg-primary-600', 'text-white');
          b.classList.add('bg-gray-200', 'text-gray-700');
        });
        this.classList.add('active', 'bg-primary-600', 'text-white');
        this.classList.remove('bg-gray-200', 'text-gray-700');
        
        // Filter case studies
        caseStudies.forEach(study => {
          if (filter === 'all' || study.getAttribute('data-category') === filter) {
            study.style.display = 'block';
          } else {
            study.style.display = 'none';
          }
        });
      });
    });
  });
</script>