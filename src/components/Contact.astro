<section id="contact" class="py-20 bg-white/80 dark:bg-darkbg-900/80 backdrop-blur">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Schedule Your Free Demo
      </h2>
      <p class="text-xl text-white max-w-3xl mx-auto">
        See how our AI infrastructure can transform your business. Book a personalized demo 
        and discover the perfect solution for your needs.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-start">
      <!-- Contact Form -->
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Get Started Today</h3>
        
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">First Name</label>
              <input type="text" id="firstName" name="firstName" required 
                     class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200">
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Last Name</label>
              <input type="text" id="lastName" name="lastName" required 
                     class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200">
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Email Address</label>
            <input type="email" id="email" name="email" required 
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200">
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Phone Number</label>
            <input type="tel" id="phone" name="phone" 
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200">
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Company Name</label>
            <input type="text" id="company" name="company" required 
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200">
          </div>

          <div>
            <label for="industry" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Industry</label>
            <select id="industry" name="industry" required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200">
              <option value="">Select your industry</option>
              <option value="local-services">Local Services</option>
              <option value="healthcare">Healthcare</option>
              <option value="real-estate">Real Estate</option>
              <option value="legal">Legal Services</option>
              <option value="automotive">Automotive</option>
              <option value="retail">Retail</option>
              <option value="restaurants">Restaurants</option>
              <option value="agencies">Marketing Agencies</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-900 dark:text-white mb-2">Tell us about your business needs</label>
            <textarea id="message" name="message" rows="4" 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-colors duration-200"
                      placeholder="What challenges are you facing? What are your goals?"></textarea>
          </div>

          <button type="submit" 
                  class="w-full bg-primary-600 text-white py-4 px-6 rounded-lg text-lg font-semibold transition-colors duration-200">
            Schedule Free Demo
          </button>
        </form>

        <p class="text-sm text-gray-900 mt-4 text-center">
          No commitment required. See results in your first demo call.
        </p>
      </div>

      <!-- Contact Information & Calendar -->
      <div class="space-y-8">
        <!-- Contact Info -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Email</h4>
                <p class="text-gray-900 dark:text-white">hello@astrixdigitalmedia.com</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Phone</h4>
                <p class="text-gray-900 dark:text-white">+1 (555) 123-4567</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Response Time</h4>
                <p class="text-gray-900 dark:text-white">Within 2 hours during business hours</p>
              </div>
            </div>
          </div>
        </div>

        <!-- What to Expect -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">What to Expect</h3>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="bg-green-100 w-8 h-8 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-1">
                <span class="text-green-600 font-bold text-sm">1</span>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Discovery Call (15 min)</h4>
                <p class="text-gray-900 dark:text-white text-sm">We'll learn about your business and current challenges</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-blue-100 w-8 h-8 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-1">
                <span class="text-blue-600 font-bold text-sm">2</span>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Live Demo (30 min)</h4>
                <p class="text-gray-900 dark:text-white text-sm">See our AI in action with scenarios specific to your industry</p>
              </div>
            </div>

            <div class="flex items-start">
              <div class="bg-purple-100 w-8 h-8 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-1">
                <span class="text-purple-600 font-bold text-sm">3</span>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 dark:text-white">Custom Proposal</h4>
                <p class="text-gray-900 dark:text-white text-sm">Receive a tailored solution and implementation plan</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Testimonial -->
        <div class="bg-gradient-to-r from-primary-600/80 to-accent-600/80 dark:from-[rgb(94,0,255,0.8)] dark:to-primary-darkAccent/80 rounded-2xl p-8 text-white dark:text-gray-100 enhanced-gradient-box">
          <blockquote class="text-lg italic mb-4">
            "The demo was incredible. Within 30 minutes, I could see exactly how this would transform our customer service. We signed up immediately."
          </blockquote>
          <footer class="flex items-center">
            <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center mr-4">
              <span class="text-white font-bold">JD</span>
            </div>
            <div>
              <div class="font-semibold">Jennifer Davis</div>
              <div class="text-primary-100 text-sm">CEO, Davis Consulting</div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </div>
</section>