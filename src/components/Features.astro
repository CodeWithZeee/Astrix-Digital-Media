              <circle cx="16" cy="16" r="2" fill="#06b6d4"/>
              <circle cx="24" cy="16" r="2" fill="#06b6d4"/>
              <path d="M12 24h16" stroke="#a259ec" stroke-width="2" stroke-linecap="round"/>
