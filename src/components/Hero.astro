<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 sm:pt-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight mb-6 dark:drop-shadow-[0_0_16px_rgba(255,255,255,0.3)]">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 via-blue-600 to-accent-600 dark:from-white dark:via-gray-200 dark:to-gray-300">
            AI-Powered Growth Engine
          </span>
          <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-600 via-purple-600 to-primary-600 dark:from-gray-300 dark:via-white dark:to-gray-200">
            That Scales Your Business
          </span>
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
          <span class="font-semibold text-primary-600 dark:text-white">Revolutionize your business</span> with our cutting-edge AI platform that 
          <span class="font-medium text-accent-600 dark:text-gray-200">automates customer interactions</span>, 
          <span class="font-medium text-blue-600 dark:text-gray-200">streamlines lead management</span>, and 
          <span class="font-medium text-green-600 dark:text-gray-200">accelerates growth</span> through intelligent automation.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a href="#contact" class="bg-gradient-to-r from-primary-600 to-blue-600 dark:from-white dark:to-gray-200 text-white dark:text-gray-900 px-8 py-4 rounded-lg text-lg font-bold hover:from-primary-700 hover:to-blue-700 dark:hover:from-gray-200 dark:hover:to-white transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
            ðŸš€ Start Free Trial
          </a>
          <a href="#how-it-works" class="border-2 border-primary-600 dark:border-white/30 text-primary-600 dark:text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-600 hover:text-white dark:hover:bg-white/10 dark:hover:border-white/50 transition-all duration-300 backdrop-blur-sm">
            âœ¨ See How It Works
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-8 mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-gray-200 dark:border-white/20">
          <div class="text-center group">
            <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-blue-600 dark:from-white dark:to-gray-200 group-hover:from-blue-600 group-hover:to-primary-600 transition-all duration-300">500+</div>
            <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Businesses Automated</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Growing Daily</div>
          </div>
          <div class="text-center group">
            <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-emerald-600 dark:from-green-400 dark:to-emerald-400 group-hover:from-emerald-600 group-hover:to-green-600 transition-all duration-300">95%</div>
            <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Customer Satisfaction</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Proven Results</div>
          </div>
          <div class="text-center group">
            <div class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 group-hover:from-pink-600 group-hover:to-purple-600 transition-all duration-300">24/7</div>
            <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">AI Support</div>
            <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Always Available</div>
          </div>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative animate-fade-in mt-8 lg:mt-0" style="animation-delay: 0.3s;">
        <div class="relative">
          <!-- Main Dashboard Mockup -->
          <div class="bg-white dark:bg-gradient-to-br dark:from-[#2c2f33] dark:via-[#23272a] dark:to-[#1a1a1a] rounded-2xl shadow-2xl p-4 sm:p-6 transform rotate-1 sm:rotate-3 hover:rotate-0 transition-all duration-500 dark:ring-1 dark:ring-white/20 dark:backdrop-blur-md dark:shadow-[0_0_30px_rgba(255,255,255,0.1)] hover:dark:shadow-[0_0_40px_rgba(255,255,255,0.15)] relative overflow-hidden group">
            <!-- Animated background pattern -->
            <div class="absolute inset-0 dark:bg-gradient-to-r dark:from-transparent dark:via-white/5 dark:to-transparent dark:animate-pulse opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            <!-- Corner accent -->
            <div class="absolute top-0 right-0 w-16 h-16 dark:bg-gradient-to-br dark:from-white/20 dark:to-transparent rounded-bl-2xl"></div>
            <div class="bg-gradient-to-r from-primary-500 to-accent-500 dark:from-accent-dark dark:to-primary-darkAccent h-3 rounded-t-lg mb-4"></div>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="relative">
                  <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                  <div class="absolute inset-0 w-3 h-3 bg-green-400 rounded-full animate-ping opacity-75"></div>
                </div>
                <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">AI Receptionist Active</div>
                <div class="ml-auto text-xs text-gray-500 dark:text-gray-400">Online</div>
              </div>
              <div class="bg-gray-100 dark:bg-gradient-to-r dark:from-[#23272a] dark:to-[#2c2f33] h-20 rounded-lg flex items-center justify-center border dark:border-white/10">
                <div class="text-gray-500 dark:text-gray-300 flex items-center space-x-2">
                  <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                  <span>Live Chat Interface</span>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-primary-50 dark:bg-gradient-to-br dark:from-[#23272a]/80 dark:to-[#2c2f33]/60 p-3 rounded-lg border dark:border-white/10 hover:dark:border-white/20 transition-all duration-300 group/card relative overflow-hidden">
                  <div class="absolute inset-0 dark:bg-gradient-to-r dark:from-transparent dark:via-white/5 dark:to-transparent opacity-0 group-hover/card:opacity-100 transition-opacity duration-300"></div>
                  <div class="relative">
                    <div class="text-xs text-primary-600 dark:text-gray-300 font-semibold flex items-center">
                      <div class="w-1 h-1 bg-green-400 rounded-full mr-2"></div>
                      Leads Today
                    </div>
                    <div class="text-lg font-bold text-primary-700 dark:text-white">47</div>
                  </div>
                </div>
                <div class="bg-accent-50 dark:bg-gradient-to-br dark:from-[#23272a]/80 dark:to-[#2c2f33]/60 p-3 rounded-lg border dark:border-white/10 hover:dark:border-white/20 transition-all duration-300 group/card relative overflow-hidden">
                  <div class="absolute inset-0 dark:bg-gradient-to-r dark:from-transparent dark:via-white/5 dark:to-transparent opacity-0 group-hover/card:opacity-100 transition-opacity duration-300"></div>
                  <div class="relative">
                    <div class="text-xs text-accent-600 dark:text-gray-300 font-semibold flex items-center">
                      <div class="w-1 h-1 bg-blue-400 rounded-full mr-2"></div>
                      Conversion Rate
                    </div>
                    <div class="text-lg font-bold text-accent-700 dark:text-white">68%</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-2 -right-2 sm:-top-4 sm:-right-4 bg-gradient-to-r from-green-500 to-green-400 text-white p-1 sm:p-2 rounded-lg text-xs font-semibold animate-bounce shadow-lg dark:shadow-[0_0_15px_rgba(34,197,94,0.5)] border dark:border-green-400/30 backdrop-blur-sm">
            <div class="flex items-center space-x-1">
              <div class="w-1 h-1 bg-white rounded-full animate-pulse"></div>
              <span>+12 New Leads</span>
            </div>
          </div>
          <div class="absolute -bottom-2 -left-2 sm:-bottom-4 sm:-left-4 bg-gradient-to-r from-blue-500 to-blue-400 text-white p-1 sm:p-2 rounded-lg text-xs font-semibold animate-pulse shadow-lg dark:shadow-[0_0_15px_rgba(59,130,246,0.5)] border dark:border-blue-400/30 backdrop-blur-sm">
            <div class="flex items-center space-x-1">
              <div class="w-1 h-1 bg-white rounded-full animate-ping"></div>
              <span>AI Processing...</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style is:inline>
@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.dark .group:hover .shimmer {
  animation: shimmer 1.5s ease-in-out infinite;
}

.dark .group:hover {
  transform: translateY(-2px);
}

.dark .group/card:hover {
  transform: scale(1.02);
}
</style>