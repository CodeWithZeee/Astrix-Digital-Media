---
import LightBackground from './LightBackground.astro';
import DarkBackground from './DarkBackground.astro';
---

<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 via-white to-accent-50 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-float"></div>
    <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent-100 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-float" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-6">
          AI Growth Infrastructure for 
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-accent-600">
            Business Development
          </span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Transform your business with our comprehensive AI-powered platform that automates customer interactions, 
          streamlines lead management, and accelerates growth through intelligent automation.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#contact" class="bg-primary-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-700 transition-all duration-200 transform hover:scale-105 shadow-lg">
            Schedule Free Demo
          </a>
          <a href="#how-it-works" class="border-2 border-primary-600 text-primary-600 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-600 hover:text-white transition-all duration-200">
            Learn More
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mt-12 pt-8 border-t border-gray-200">
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">500+</div>
            <div class="text-sm text-gray-600">Businesses Automated</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">95%</div>
            <div class="text-sm text-gray-600">Customer Satisfaction</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600">24/7</div>
            <div class="text-sm text-gray-600">AI Support</div>
          </div>
        </div>
      </div>

      <!-- Enhanced Dashboard Mockup -->
      <div class="relative animate-fade-in dashboard-container" style="animation-delay: 0.3s;">
        <div class="relative">
          <!-- Main Dashboard Mockup -->
          <div class="bg-white rounded-2xl shadow-2xl p-6 transform rotate-3 hover:rotate-0 transition-transform duration-500">
            <div class="bg-gradient-to-r from-primary-500 to-accent-500 h-3 rounded-t-lg mb-4"></div>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                <div class="text-sm text-gray-600">AI Receptionist Active</div>
              </div>
              <div class="bg-gray-100 h-20 rounded-lg flex items-center justify-center">
                <div class="text-gray-500">Live Chat Interface</div>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-primary-50 p-3 rounded-lg">
                  <div class="text-xs text-primary-600 font-semibold">Leads Today</div>
                  <div class="text-lg font-bold text-primary-700">47</div>
                </div>
                <div class="bg-accent-50 p-3 rounded-lg">
                  <div class="text-xs text-accent-600 font-semibold">Conversion Rate</div>
                  <div class="text-lg font-bold text-accent-700">68%</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 bg-green-500 text-white p-2 rounded-lg text-xs font-semibold animate-bounce">
            +12 New Leads
          </div>
          <div class="absolute -bottom-4 -left-4 bg-blue-500 text-white p-2 rounded-lg text-xs font-semibold animate-pulse">
            AI Processing...
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Light theme styles */
  .hero-section {
    transition: all 0.5s ease;
  }

  .hero-text {
    color: #1f2937;
    transition: color 0.5s ease;
  }

  .hero-description {
    color: #4b5563;
    transition: color 0.5s ease;
  }

  .status-indicator span {
    transition: color 0.5s ease;
  }

  .status-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(14, 165, 233, 0.2);
    border-radius: 0.5rem;
    padding: 1rem;
    text-align: center;
    transition: all 0.5s ease;
  }

  .status-text {
    color: #6b7280;
    transition: color 0.5s ease;
  }

  .hero-cta-primary {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    transition: all 0.3s ease;
    transform: scale(1);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
    text-decoration: none;
    display: inline-block;
  }

  .hero-cta-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
  }

  .hero-cta-secondary {
    border: 2px solid #3b82f6;
    color: #3b82f6;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    text-decoration: none;
    display: inline-block;
  }

  .hero-cta-secondary:hover {
    background: #3b82f6;
    color: white;
  }

  .dashboard-mockup {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: 1rem;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(14, 165, 233, 0.2);
    padding: 1.5rem;
    transform: scale(1);
    transition: all 0.5s ease;
  }

  .dashboard-mockup:hover {
    transform: scale(1.02);
  }

  .chat-interface {
    background: rgba(243, 244, 246, 0.8);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    border: 1px solid rgba(209, 213, 219, 0.5);
    transition: all 0.5s ease;
  }

  .chat-title {
    color: #374151;
    font-size: 0.875rem;
    transition: color 0.5s ease;
  }

  .chat-message {
    padding: 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    display: flex;
    align-items: center;
  }

  .customer-message {
    background: rgba(59, 130, 246, 0.1);
    color: #1d4ed8;
  }

  .ai-message {
    background: rgba(34, 197, 94, 0.1);
    color: #059669;
  }

  .metric-card {
    padding: 0.75rem;
    border-radius: 0.5rem;
    transition: all 0.5s ease;
  }

  .metric-card-cyan {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
    border: 1px solid rgba(6, 182, 212, 0.2);
  }

  .metric-card-purple {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(236, 72, 153, 0.1));
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .notification {
    position: absolute;
    padding: 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .notification-success {
    top: -1rem;
    right: -1rem;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    animation: bounce 2s infinite;
  }

  .notification-processing {
    bottom: -1rem;
    left: -1rem;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    animation: pulse 2s infinite;
  }

  /* Dark theme styles */
  [data-theme="dark"] .hero-text {
    color: white;
  }

  [data-theme="dark"] .hero-description {
    color: #d1d5db;
  }

  [data-theme="dark"] .status-card {
    background: rgba(17, 24, 39, 0.8);
    border: 1px solid rgba(14, 165, 233, 0.3);
  }

  [data-theme="dark"] .status-text {
    color: #9ca3af;
  }

  [data-theme="dark"] .hero-cta-primary {
    background: linear-gradient(135deg, #06b6d4, #0284c7);
    box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
  }

  [data-theme="dark"] .hero-cta-primary:hover {
    box-shadow: 0 8px 25px rgba(6, 182, 212, 0.4);
  }

  [data-theme="dark"] .hero-cta-secondary {
    border-color: #06b6d4;
    color: #06b6d4;
  }

  [data-theme="dark"] .hero-cta-secondary:hover {
    background: #06b6d4;
    color: #111827;
  }

  [data-theme="dark"] .dashboard-mockup {
    background: rgba(17, 24, 39, 0.9);
    border: 1px solid rgba(14, 165, 233, 0.3);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  }

  [data-theme="dark"] .chat-interface {
    background: rgba(31, 41, 55, 0.8);
    border: 1px solid rgba(75, 85, 99, 0.5);
  }

  [data-theme="dark"] .chat-title {
    color: #d1d5db;
  }

  [data-theme="dark"] .customer-message {
    background: rgba(59, 130, 246, 0.2);
    color: #93c5fd;
  }

  [data-theme="dark"] .ai-message {
    background: rgba(34, 197, 94, 0.2);
    color: #86efac;
  }

  [data-theme="dark"] .metric-card-cyan {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(59, 130, 246, 0.2));
    border: 1px solid rgba(6, 182, 212, 0.3);
  }

  [data-theme="dark"] .metric-card-purple {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(236, 72, 153, 0.2));
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  /* Animations */
  @keyframes bounce {
    0%, 20%, 53%, 80%, 100% {
      transform: translate3d(0,0,0);
    }
    40%, 43% {
      transform: translate3d(0,-30px,0);
    }
    70% {
      transform: translate3d(0,-15px,0);
    }
    90% {
      transform: translate3d(0,-4px,0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .status-grid {
      gap: 0.5rem;
    }
    
    .status-card {
      padding: 0.75rem;
    }
    
    .dashboard-mockup {
      padding: 1rem;
    }
    
    .notification {
      font-size: 0.625rem;
      padding: 0.5rem;
    }
  }
</style>