<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight mb-6 dark:drop-shadow-[0_0_16px_#a78bfa]">
          AI Growth Infrastructure for
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary-600 to-accent-600 dark:from-accent-dark dark:to-primary-darkAccent">
            Business Development
          </span>
        </h1>
        
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
          Transform your business with our comprehensive AI-powered platform that automates customer interactions, 
          streamlines lead management, and accelerates growth through intelligent automation.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="#contact" class="bg-primary-600 dark:bg-accent-dark text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-700 dark:hover:bg-primary-darkAccent transition-all duration-200 transform hover:scale-105 shadow-lg">
            Schedule Free Demo
          </a>
          <a href="#how-it-works" class="border-2 border-primary-600 dark:border-accent-dark text-primary-600 dark:text-accent-dark px-8 py-4 rounded-lg text-lg font-semibold hover:bg-primary-600 hover:text-white dark:hover:bg-primary-darkAccent dark:hover:text-white transition-all duration-200">
            Learn More
          </a>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-8 mt-12 pt-8 border-t border-gray-200 dark:border-primary-dark/40">
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600 dark:text-accent-dark">500+</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">Businesses Automated</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600 dark:text-accent-dark">95%</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">Customer Satisfaction</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-600 dark:text-accent-dark">24/7</div>
            <div class="text-sm text-gray-600 dark:text-gray-300">AI Support</div>
          </div>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative animate-fade-in" style="animation-delay: 0.3s;">
        <div class="relative">
          <!-- Main Dashboard Mockup -->
          <div class="bg-white dark:bg-darkbg-800/80 rounded-2xl shadow-2xl p-6 transform rotate-3 hover:rotate-0 transition-transform duration-500 dark:ring-2 dark:ring-accent-dark dark:backdrop-blur-md dark:shadow-accent-dark/30">
            <div class="bg-gradient-to-r from-primary-500 to-accent-500 dark:from-accent-dark dark:to-primary-darkAccent h-3 rounded-t-lg mb-4"></div>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                <div class="text-sm text-gray-600 dark:text-gray-300">AI Receptionist Active</div>
              </div>
              <div class="bg-gray-100 dark:bg-darkbg-900/60 h-20 rounded-lg flex items-center justify-center">
                <div class="text-gray-500 dark:text-gray-400">Live Chat Interface</div>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-primary-50 dark:bg-darkbg-900/40 p-3 rounded-lg">
                  <div class="text-xs text-primary-600 dark:text-accent-dark font-semibold">Leads Today</div>
                  <div class="text-lg font-bold text-primary-700 dark:text-accent-dark">47</div>
                </div>
                <div class="bg-accent-50 dark:bg-darkbg-900/40 p-3 rounded-lg">
                  <div class="text-xs text-accent-600 dark:text-accent-dark font-semibold">Conversion Rate</div>
                  <div class="text-lg font-bold text-accent-700 dark:text-accent-dark">68%</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Elements -->
          <div class="absolute -top-4 -right-4 bg-green-500 text-white p-2 rounded-lg text-xs font-semibold animate-bounce shadow-lg dark:shadow-accent-dark/30">
            +12 New Leads
          </div>
          <div class="absolute -bottom-4 -left-4 bg-blue-500 text-white p-2 rounded-lg text-xs font-semibold animate-pulse shadow-lg dark:shadow-accent-dark/30">
            AI Processing...
          </div>
        </div>
      </div>
    </div>
  </div>
</section>