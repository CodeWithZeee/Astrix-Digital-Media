---
import LightBackground from './LightBackground.astro';
import DarkBackground from './DarkBackground.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden hero-section">
  <!-- Light Theme Background -->
  <LightBackground />
  
  <!-- Dark Theme Background -->
  <DarkBackground />

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-slide-up">
        <div class="mb-4 flex items-center justify-center lg:justify-start gap-2 status-indicator">
          <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
          <span class="text-green-400 text-sm font-mono">AI SYSTEMS ONLINE</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 hero-title">
          <span class="hero-text">AI Growth Infrastructure for</span>
          <br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-600 animate-pulse gradient-text">
            Business Development
          </span>
        </h1>
        
        <p class="text-xl leading-relaxed mb-8 hero-description">
          Transform your business with our comprehensive AI-powered platform that automates customer interactions, 
          streamlines lead management, and accelerates growth through intelligent automation.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a href="#contact" class="group relative hero-cta-primary">
            <span class="relative z-10">Schedule Free Demo</span>
            <div class="absolute inset-0 bg-gradient-to-r from-cyan-400 to-blue-500 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-sm"></div>
          </a>
          <a href="#how-it-works" class="hero-cta-secondary">
            Learn More
          </a>
        </div>

        <!-- Tech Status Indicators -->
        <div class="grid grid-cols-3 gap-4 mb-8 status-grid">
          <div class="status-card">
            <div class="flex items-center justify-center mb-2">
              <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse mr-2"></div>
              <span class="text-green-400 text-xs font-mono">ACTIVE</span>
            </div>
            <div class="text-2xl font-bold text-cyan-400">500+</div>
            <div class="text-xs status-text">Businesses Automated</div>
          </div>
          <div class="status-card">
            <div class="flex items-center justify-center mb-2">
              <div class="w-2 h-2 bg-purple-400 rounded-full animate-pulse mr-2"></div>
              <span class="text-purple-400 text-xs font-mono">OPTIMAL</span>
            </div>
            <div class="text-2xl font-bold text-purple-400">95%</div>
            <div class="text-xs status-text">Customer Satisfaction</div>
          </div>
          <div class="status-card">
            <div class="flex items-center justify-center mb-2">
              <div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse mr-2"></div>
              <span class="text-blue-400 text-xs font-mono">ONLINE</span>
            </div>
            <div class="text-2xl font-bold text-blue-400">24/7</div>
            <div class="text-xs status-text">AI Support</div>
          </div>
        </div>
      </div>

      <!-- Enhanced Dashboard Mockup -->
      <div class="relative animate-fade-in dashboard-container" style="animation-delay: 0.3s;">
        <div class="relative">
          <!-- Main Dashboard -->
          <div class="dashboard-mockup">
            <!-- Header with status -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center space-x-2">
                <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                <span class="text-green-400 text-sm font-mono">AI RECEPTIONIST ACTIVE</span>
              </div>
              <div class="text-cyan-400 text-xs font-mono">SYSTEM STATUS: OPTIMAL</div>
            </div>
            
            <!-- Live Chat Interface -->
            <div class="chat-interface">
              <div class="flex items-center justify-between mb-2">
                <span class="chat-title">Live Chat Interface</span>
                <div class="flex space-x-1">
                  <div class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></div>
                  <div class="w-2 h-2 bg-yellow-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
                  <div class="w-2 h-2 bg-red-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
                </div>
              </div>
              <div class="space-y-2">
                <div class="chat-message customer-message">
                  Customer: "I need help with my order"
                </div>
                <div class="chat-message ai-message">
                  AI: "I'd be happy to help you with that..."
                  <div class="ml-2 flex space-x-1">
                    <div class="w-1 h-1 bg-green-400 rounded-full animate-bounce"></div>
                    <div class="w-1 h-1 bg-green-400 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                    <div class="w-1 h-1 bg-green-400 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Metrics Grid -->
            <div class="grid grid-cols-2 gap-4">
              <div class="metric-card metric-card-cyan">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-xs text-cyan-400 font-mono">LEADS TODAY</div>
                    <div class="text-lg font-bold text-cyan-300">47</div>
                  </div>
                  <div class="text-green-400">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <div class="w-full bg-gray-700 rounded-full h-1 mt-2">
                  <div class="bg-cyan-400 h-1 rounded-full animate-pulse" style="width: 68%"></div>
                </div>
              </div>
              
              <div class="metric-card metric-card-purple">
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-xs text-purple-400 font-mono">CONVERSION</div>
                    <div class="text-lg font-bold text-purple-300">68%</div>
                  </div>
                  <div class="text-green-400">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                </div>
                <div class="w-full bg-gray-700 rounded-full h-1 mt-2">
                  <div class="bg-purple-400 h-1 rounded-full animate-pulse" style="width: 68%"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating Notifications -->
          <div class="notification notification-success">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
              <span>+12 New Leads</span>
            </div>
          </div>
          
          <div class="notification notification-processing">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-white rounded-full animate-spin"></div>
              <span>AI Processing...</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Light theme styles */
  .hero-section {
    transition: all 0.5s ease;
  }

  .hero-text {
    color: #1f2937;
    transition: color 0.5s ease;
  }

  .hero-description {
    color: #4b5563;
    transition: color 0.5s ease;
  }

  .status-indicator span {
    transition: color 0.5s ease;
  }

  .status-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(14, 165, 233, 0.2);
    border-radius: 0.5rem;
    padding: 1rem;
    text-align: center;
    transition: all 0.5s ease;
  }

  .status-text {
    color: #6b7280;
    transition: color 0.5s ease;
  }

  .hero-cta-primary {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    transition: all 0.3s ease;
    transform: scale(1);
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
    text-decoration: none;
    display: inline-block;
  }

  .hero-cta-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
  }

  .hero-cta-secondary {
    border: 2px solid #3b82f6;
    color: #3b82f6;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-size: 1.125rem;
    font-weight: 600;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    text-decoration: none;
    display: inline-block;
  }

  .hero-cta-secondary:hover {
    background: #3b82f6;
    color: white;
  }

  .dashboard-mockup {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: 1rem;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(14, 165, 233, 0.2);
    padding: 1.5rem;
    transform: scale(1);
    transition: all 0.5s ease;
  }

  .dashboard-mockup:hover {
    transform: scale(1.02);
  }

  .chat-interface {
    background: rgba(243, 244, 246, 0.8);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    border: 1px solid rgba(209, 213, 219, 0.5);
    transition: all 0.5s ease;
  }

  .chat-title {
    color: #374151;
    font-size: 0.875rem;
    transition: color 0.5s ease;
  }

  .chat-message {
    padding: 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    display: flex;
    align-items: center;
  }

  .customer-message {
    background: rgba(59, 130, 246, 0.1);
    color: #1d4ed8;
  }

  .ai-message {
    background: rgba(34, 197, 94, 0.1);
    color: #059669;
  }

  .metric-card {
    padding: 0.75rem;
    border-radius: 0.5rem;
    transition: all 0.5s ease;
  }

  .metric-card-cyan {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.1), rgba(59, 130, 246, 0.1));
    border: 1px solid rgba(6, 182, 212, 0.2);
  }

  .metric-card-purple {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(236, 72, 153, 0.1));
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .notification {
    position: absolute;
    padding: 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .notification-success {
    top: -1rem;
    right: -1rem;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    animation: bounce 2s infinite;
  }

  .notification-processing {
    bottom: -1rem;
    left: -1rem;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    animation: pulse 2s infinite;
  }

  /* Dark theme styles */
  [data-theme="dark"] .hero-text {
    color: white;
  }

  [data-theme="dark"] .hero-description {
    color: #d1d5db;
  }

  [data-theme="dark"] .status-card {
    background: rgba(17, 24, 39, 0.8);
    border: 1px solid rgba(14, 165, 233, 0.3);
  }

  [data-theme="dark"] .status-text {
    color: #9ca3af;
  }

  [data-theme="dark"] .hero-cta-primary {
    background: linear-gradient(135deg, #06b6d4, #0284c7);
    box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
  }

  [data-theme="dark"] .hero-cta-primary:hover {
    box-shadow: 0 8px 25px rgba(6, 182, 212, 0.4);
  }

  [data-theme="dark"] .hero-cta-secondary {
    border-color: #06b6d4;
    color: #06b6d4;
  }

  [data-theme="dark"] .hero-cta-secondary:hover {
    background: #06b6d4;
    color: #111827;
  }

  [data-theme="dark"] .dashboard-mockup {
    background: rgba(17, 24, 39, 0.9);
    border: 1px solid rgba(14, 165, 233, 0.3);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
  }

  [data-theme="dark"] .chat-interface {
    background: rgba(31, 41, 55, 0.8);
    border: 1px solid rgba(75, 85, 99, 0.5);
  }

  [data-theme="dark"] .chat-title {
    color: #d1d5db;
  }

  [data-theme="dark"] .customer-message {
    background: rgba(59, 130, 246, 0.2);
    color: #93c5fd;
  }

  [data-theme="dark"] .ai-message {
    background: rgba(34, 197, 94, 0.2);
    color: #86efac;
  }

  [data-theme="dark"] .metric-card-cyan {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(59, 130, 246, 0.2));
    border: 1px solid rgba(6, 182, 212, 0.3);
  }

  [data-theme="dark"] .metric-card-purple {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2), rgba(236, 72, 153, 0.2));
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  /* Animations */
  @keyframes bounce {
    0%, 20%, 53%, 80%, 100% {
      transform: translate3d(0,0,0);
    }
    40%, 43% {
      transform: translate3d(0,-30px,0);
    }
    70% {
      transform: translate3d(0,-15px,0);
    }
    90% {
      transform: translate3d(0,-4px,0);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from { 
      opacity: 0; 
      transform: translateY(30px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out;
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .status-grid {
      gap: 0.5rem;
    }
    
    .status-card {
      padding: 0.75rem;
    }
    
    .dashboard-mockup {
      padding: 1rem;
    }
    
    .notification {
      font-size: 0.625rem;
      padding: 0.5rem;
    }
  }
</style>