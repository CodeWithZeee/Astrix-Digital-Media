<div class="light-background">
  <!-- Floating bubbles -->
  <div class="bubbles">
    <div class="bubble bubble-1"></div>
    <div class="bubble bubble-2"></div>
    <div class="bubble bubble-3"></div>
    <div class="bubble bubble-4"></div>
    <div class="bubble bubble-5"></div>
    <div class="bubble bubble-6"></div>
    <div class="bubble bubble-7"></div>
    <div class="bubble bubble-8"></div>
  </div>

  <!-- Subtle grid -->
  <div class="subtle-grid"></div>
</div>

<style>
  .light-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f8fafc 100%);
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  [data-theme="light"] .light-background {
    opacity: 1;
  }

  /* Floating bubbles */
  .bubbles {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .bubble {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(14, 165, 233, 0.1), rgba(59, 130, 246, 0.05));
    backdrop-filter: blur(10px);
    border: 1px solid rgba(14, 165, 233, 0.1);
  }

  .bubble-1 {
    width: 80px;
    height: 80px;
    top: 10%;
    left: 10%;
    animation: float-up 20s infinite ease-in-out;
  }

  .bubble-2 {
    width: 60px;
    height: 60px;
    top: 20%;
    right: 15%;
    animation: float-up 25s infinite ease-in-out 5s;
  }

  .bubble-3 {
    width: 100px;
    height: 100px;
    top: 60%;
    left: 20%;
    animation: float-up 18s infinite ease-in-out 10s;
  }

  .bubble-4 {
    width: 40px;
    height: 40px;
    top: 70%;
    right: 25%;
    animation: float-up 22s infinite ease-in-out 3s;
  }

  .bubble-5 {
    width: 70px;
    height: 70px;
    bottom: 20%;
    left: 60%;
    animation: float-up 30s infinite ease-in-out 8s;
  }

  .bubble-6 {
    width: 50px;
    height: 50px;
    top: 40%;
    left: 70%;
    animation: float-up 16s infinite ease-in-out 12s;
  }

  .bubble-7 {
    width: 90px;
    height: 90px;
    bottom: 30%;
    right: 10%;
    animation: float-up 28s infinite ease-in-out 6s;
  }

  .bubble-8 {
    width: 35px;
    height: 35px;
    top: 50%;
    left: 40%;
    animation: float-up 24s infinite ease-in-out 15s;
  }

  /* Subtle grid */
  .subtle-grid {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(14, 165, 233, 0.05) 1px, transparent 1px),
      linear-gradient(90deg, rgba(14, 165, 233, 0.05) 1px, transparent 1px);
    background-size: 100px 100px;
    animation: grid-drift 30s infinite linear;
  }

  /* Animations */
  @keyframes float-up {
    0%, 100% { 
      transform: translateY(0px) translateX(0px) scale(1);
      opacity: 0.7;
    }
    25% { 
      transform: translateY(-100px) translateX(50px) scale(1.1);
      opacity: 1;
    }
    50% { 
      transform: translateY(-200px) translateX(-30px) scale(0.9);
      opacity: 0.8;
    }
    75% { 
      transform: translateY(-150px) translateX(-80px) scale(1.05);
      opacity: 0.9;
    }
  }

  @keyframes grid-drift {
    0% { transform: translate(0, 0); }
    100% { transform: translate(100px, 100px); }
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .bubble {
      transform: scale(0.7);
    }
    
    .subtle-grid {
      background-size: 50px 50px;
    }
  }

  /* Existing gradients */
  .light-bg-gradient {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  }
  .light-bg-gradient-alt {
    background: linear-gradient(135deg, #8b5cf6, #ec4899);
  }
  /* Hide gradients in dark mode */
  .dark .light-bg-gradient,
  .dark .light-bg-gradient-alt {
    background: #000 !important;
  }
</style>
</style>