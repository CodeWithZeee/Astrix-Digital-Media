<div class="techy-elements">
  <!-- Scanning lines -->
  <div class="scanning-lines">
    <div class="scan-line scan-line-1"></div>
    <div class="scan-line scan-line-2"></div>
  </div>

  <!-- Circuit patterns -->
  <div class="circuit-patterns">
    <div class="circuit circuit-1">
      <div class="node"></div>
      <div class="connection"></div>
    </div>
    <div class="circuit circuit-2">
      <div class="node"></div>
      <div class="connection"></div>
    </div>
  </div>

  <!-- Data streams -->
  <div class="data-streams">
    <div class="stream stream-1">
      <span class="bit">1</span>
      <span class="bit">0</span>
      <span class="bit">1</span>
      <span class="bit">1</span>
    </div>
    <div class="stream stream-2">
      <span class="bit">0</span>
      <span class="bit">1</span>
      <span class="bit">0</span>
      <span class="bit">1</span>
    </div>
  </div>

  <!-- Holographic panels -->
  <div class="holo-panels">
    <div class="holo-panel panel-1">
      <div class="panel-content">AI STATUS</div>
    </div>
    <div class="holo-panel panel-2">
      <div class="panel-content">ONLINE</div>
    </div>
  </div>
</div>

<style>
  .techy-elements {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    overflow: hidden;
  }

  /* Scanning lines */
  .scanning-lines {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .scan-line {
    position: absolute;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #00ff88, transparent);
    opacity: 0.6;
  }

  .scan-line-1 {
    top: 20%;
    animation: scan-horizontal 8s infinite ease-in-out;
  }

  .scan-line-2 {
    top: 70%;
    animation: scan-horizontal 12s infinite ease-in-out 4s;
  }

  /* Circuit patterns */
  .circuit-patterns {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .circuit {
    position: absolute;
  }

  .circuit-1 {
    top: 15%;
    right: 10%;
    width: 100px;
    height: 100px;
  }

  .circuit-2 {
    bottom: 25%;
    left: 5%;
    width: 80px;
    height: 80px;
  }

  .node {
    width: 8px;
    height: 8px;
    background: #00ff88;
    border-radius: 50%;
    box-shadow: 0 0 15px #00ff88;
    animation: node-pulse 3s infinite ease-in-out;
  }

  .connection {
    position: absolute;
    top: 4px;
    left: 8px;
    width: 50px;
    height: 1px;
    background: linear-gradient(90deg, #00ff88, transparent);
    animation: connection-flow 2s infinite ease-in-out;
  }

  /* Data streams */
  .data-streams {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .stream {
    position: absolute;
    display: flex;
    gap: 10px;
  }

  .stream-1 {
    top: 40%;
    left: 80%;
    flex-direction: column;
    animation: stream-flow-vertical 6s infinite linear;
  }

  .stream-2 {
    top: 60%;
    left: 10%;
    flex-direction: row;
    animation: stream-flow-horizontal 8s infinite linear;
  }

  .bit {
    color: #0ea5e9;
    font-family: 'Courier New', monospace;
    font-size: 12px;
    text-shadow: 0 0 10px #0ea5e9;
    animation: bit-flicker 1s infinite ease-in-out;
  }

  /* Holographic panels */
  .holo-panels {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .holo-panel {
    position: absolute;
    padding: 8px 16px;
    border: 1px solid #00ff88;
    background: rgba(0, 255, 136, 0.1);
    backdrop-filter: blur(10px);
    font-family: 'Courier New', monospace;
    font-size: 10px;
    color: #00ff88;
    text-shadow: 0 0 10px #00ff88;
  }

  .panel-1 {
    top: 10%;
    left: 5%;
    animation: panel-glow 4s infinite ease-in-out;
  }

  .panel-2 {
    bottom: 15%;
    right: 5%;
    animation: panel-glow 4s infinite ease-in-out 2s;
  }

  /* Animations */
  @keyframes scan-horizontal {
    0%, 100% { transform: translateY(0px); opacity: 0.6; }
    50% { transform: translateY(200px); opacity: 1; }
  }

  @keyframes node-pulse {
    0%, 100% { transform: scale(1); opacity: 0.8; }
    50% { transform: scale(1.5); opacity: 1; }
  }

  @keyframes connection-flow {
    0% { opacity: 0; transform: scaleX(0); }
    50% { opacity: 1; transform: scaleX(1); }
    100% { opacity: 0; transform: scaleX(0); }
  }

  @keyframes stream-flow-vertical {
    0% { transform: translateY(0px); opacity: 1; }
    100% { transform: translateY(100vh); opacity: 0; }
  }

  @keyframes stream-flow-horizontal {
    0% { transform: translateX(0px); opacity: 1; }
    100% { transform: translateX(100vw); opacity: 0; }
  }

  @keyframes bit-flicker {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }

  @keyframes panel-glow {
    0%, 100% { 
      border-color: #00ff88; 
      box-shadow: 0 0 20px rgba(0, 255, 136, 0.3);
    }
    50% { 
      border-color: #0ea5e9; 
      box-shadow: 0 0 30px rgba(14, 165, 233, 0.5);
    }
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .circuit {
      transform: scale(0.7);
    }
    
    .holo-panel {
      font-size: 8px;
      padding: 4px 8px;
    }
    
    .bit {
      font-size: 10px;
    }
  }
</style>