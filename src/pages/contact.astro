---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<style>
/* Uiverse.io Card Login Style, adapted for Astro and dark mode */
.demo-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 420px;
  width: 340px;
  gap: 20px;
  background: #e3e3e3;
  box-shadow: 16px 16px 32px #c8c8c8, -16px -16px 32px #fefefe;
  border-radius: 12px;
  margin: 0 auto;
  transition: background 0.3s;
  padding: 2.5rem 1.5rem;
}
:global(html.dark) .demo-card {
  background: #18181b;
  box-shadow: 16px 16px 32px #101014, -16px -16px 32px #23232a;
}
.demo-login {
  color: #000;
  text-transform: uppercase;
  letter-spacing: 2px;
  display: block;
  font-weight: bold;
  font-size: x-large;
  font-family: 'Figtree', sans-serif;
  margin-bottom: 0.5em;
}
:global(html.dark) .demo-login {
  color: #fff;
}
.demo-inputBox {
  position: relative;
  width: 250px;
  margin-bottom: 1.5em;
}
.demo-inputBox input,
.demo-inputBox select,
.demo-inputBox textarea {
  width: 100%;
  padding: 10px;
  outline: none;
  border: none;
  color: #000;
  font-size: 1em;
  background: transparent;
  border-left: 2px solid #000;
  border-bottom: 2px solid #000;
  transition: 0.1s;
  border-bottom-left-radius: 8px;
  font-family: 'Figtree', sans-serif;
}
:global(html.dark) .demo-inputBox input,
:global(html.dark) .demo-inputBox select,
:global(html.dark) .demo-inputBox textarea {
  color: #fff;
  border-left: 2px solid #fff;
  border-bottom: 2px solid #fff;
  background: transparent;
}
.demo-inputBox span {
  margin-top: 5px;
  position: absolute;
  left: 0;
  transform: translateY(-4px);
  margin-left: 10px;
  padding: 10px;
  pointer-events: none;
  font-size: 12px;
  color: #000;
  text-transform: uppercase;
  transition: 0.5s;
  letter-spacing: 3px;
  border-radius: 8px;
  font-family: 'Figtree', sans-serif;
}
:global(html.dark) .demo-inputBox span {
  color: #fff;
}
.demo-inputBox input:valid ~ span,
.demo-inputBox input:focus ~ span,
.demo-inputBox select:valid ~ span,
.demo-inputBox select:focus ~ span,
.demo-inputBox textarea:valid ~ span,
.demo-inputBox textarea:focus ~ span {
  transform: translateX(113px) translateY(-15px);
  font-size: 0.8em;
  padding: 5px 10px;
  background: #000;
  letter-spacing: 0.2em;
  color: #fff;
  border: 2px;
}
:global(html.dark) .demo-inputBox input:valid ~ span,
:global(html.dark) .demo-inputBox input:focus ~ span,
:global(html.dark) .demo-inputBox select:valid ~ span,
:global(html.dark) .demo-inputBox select:focus ~ span,
:global(html.dark) .demo-inputBox textarea:valid ~ span,
:global(html.dark) .demo-inputBox textarea:focus ~ span {
  background: #fff;
  color: #000;
}
.demo-inputBox input:valid,
.demo-inputBox input:focus,
.demo-inputBox select:valid,
.demo-inputBox select:focus,
.demo-inputBox textarea:valid,
.demo-inputBox textarea:focus {
  border: 2px solid #000;
  border-radius: 8px;
}
:global(html.dark) .demo-inputBox input:valid,
:global(html.dark) .demo-inputBox input:focus,
:global(html.dark) .demo-inputBox select:valid,
:global(html.dark) .demo-inputBox select:focus,
:global(html.dark) .demo-inputBox textarea:valid,
:global(html.dark) .demo-inputBox textarea:focus {
  border: 2px solid #fff;
}
.demo-enter {
  height: 45px;
  width: 100px;
  border-radius: 5px;
  border: 2px solid #000;
  cursor: pointer;
  background-color: transparent;
  transition: 0.5s;
  text-transform: uppercase;
  font-size: 10px;
  letter-spacing: 2px;
  margin-bottom: 1em;
  font-family: 'Figtree', sans-serif;
  font-weight: bold;
  color: #000;
}
.demo-enter:hover {
  background-color: #000;
  color: #fff;
}
:global(html.dark) .demo-enter {
  border: 2px solid #fff;
  color: #fff;
}
:global(html.dark) .demo-enter:hover {
  background-color: #fff;
  color: #000;
}
</style>

<Layout title="Contact Us - Schedule Your Free Demo | Astrix Digital Media">
  <Header />
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Schedule Your Free Demo
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            See how our AI infrastructure can transform your business. Book a personalized demo 
            and discover the perfect solution for your needs.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form & Calendar Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
          <!-- Contact Form -->
          <div class="demo-card">
            <a class="demo-login">Get Started Today</a>
            <form class="w-full flex flex-col items-center" id="contact-form" style="gap: 0;">
              <div class="demo-inputBox">
                <input type="text" id="firstName" name="firstName" required />
                <span>First Name</span>
                </div>
              <div class="demo-inputBox">
                <input type="text" id="lastName" name="lastName" required />
                <span>Last Name</span>
              </div>
              <div class="demo-inputBox">
                <input type="email" id="email" name="email" required />
                <span>Email Address</span>
              </div>
              <div class="demo-inputBox">
                <input type="tel" id="phone" name="phone" />
                <span>Phone Number</span>
              </div>
              <div class="demo-inputBox">
                <input type="text" id="company" name="company" required />
                <span>Company Name</span>
              </div>
              <div class="demo-inputBox">
                <select id="industry" name="industry" required>
                  <option value="" disabled selected hidden></option>
                  <option value="local-services">Local Services</option>
                  <option value="healthcare">Healthcare</option>
                  <option value="real-estate">Real Estate</option>
                  <option value="legal">Legal Services</option>
                  <option value="automotive">Automotive</option>
                  <option value="retail">Retail</option>
                  <option value="restaurants">Restaurants</option>
                  <option value="agencies">Marketing Agencies</option>
                  <option value="other">Other</option>
                </select>
                <span>Industry</span>
              </div>
              <div class="demo-inputBox">
                <select id="employees" name="employees">
                  <option value="" disabled selected hidden></option>
                  <option value="1-10">1-10 employees</option>
                  <option value="11-50">11-50 employees</option>
                  <option value="51-200">51-200 employees</option>
                  <option value="201-500">201-500 employees</option>
                  <option value="500+">500+ employees</option>
                </select>
                <span>Company Size</span>
              </div>
              <div class="demo-inputBox">
                <textarea id="message" name="message" rows="3"></textarea>
                <span>Business Needs</span>
              </div>
              <button type="submit" class="demo-enter">Submit</button>
            </form>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 text-center">
              No commitment required. See results in your first demo call.
            </p>
          </div>

          <!-- Calendar Booking -->
          <div class="space-y-8">
            <!-- Embedded Calendar -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
              <h2 class="text-2xl font-bold text-gray-900 mb-6">Book Your Demo Directly</h2>
              
              <!-- Calendar Placeholder - Replace with actual booking system -->
              <div class="bg-gray-50 rounded-lg p-8 text-center min-h-[400px] flex items-center justify-center">
                <div>
                  <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Calendar Integration</h3>
                  <p class="text-gray-600 mb-4">
                    Integrate your preferred calendar booking system here
                  </p>
                  <p class="text-sm text-gray-500">
                    (Calendly, Acuity Scheduling, or custom booking system)
                  </p>
                </div>
              </div>
            </div>

            <!-- What to Expect -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">What to Expect</h3>
              
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="bg-green-100 w-8 h-8 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-1">
                    <span class="text-green-600 font-bold text-sm">1</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Discovery Call (15 min)</h4>
                    <p class="text-gray-600 text-sm">We'll learn about your business and current challenges</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="bg-blue-100 w-8 h-8 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-1">
                    <span class="text-blue-600 font-bold text-sm">2</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Live Demo (30 min)</h4>
                    <p class="text-gray-600 text-sm">See our AI in action with scenarios specific to your industry</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="bg-purple-100 w-8 h-8 rounded-full flex items-center justify-center mr-3 flex-shrink-0 mt-1">
                    <span class="text-purple-600 font-bold text-sm">3</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Custom Proposal</h4>
                    <p class="text-gray-600 text-sm">Receive a tailored solution and implementation plan</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Location & Support Info -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Contact Info -->
          <div class="bg-white dark:bg-[#23272a] rounded-2xl shadow-lg p-8 text-center transform transition-transform duration-300 hover:scale-105">
            <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Email</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">hello@astrixdigitalmedia.com</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Response within 2 hours</p>
          </div>

          <!-- Phone -->
          <div class="bg-white dark:bg-[#23272a] rounded-2xl shadow-lg p-8 text-center transform transition-transform duration-300 hover:scale-105">
            <div class="bg-accent-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent-600 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Phone</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">+1 (555) 123-4567</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Mon-Fri 9AM-6PM EST</p>
          </div>

          <!-- Support -->
          <div class="bg-white dark:bg-[#23272a] rounded-2xl shadow-lg p-8 text-center transform transition-transform duration-300 hover:scale-105">
            <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">24/7 Support</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4">Live chat available</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Instant responses</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    // Get form data
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    // Here you would typically send the data to your backend
    console.log('Form submitted:', data);
    // Show success message
    alert('Thank you! We\'ll be in touch within 2 hours to schedule your demo.');
    // Reset form
    form.reset();
  });
</script>