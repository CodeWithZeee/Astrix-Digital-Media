          <!-- Card 2 -->
          <input type="radio" id="radio-2" name="radio-card">
          <article class="card" style="--angle:-8deg">
            <div class="card-img">
              <img src="/icon2.png" alt="Strategy Over Hype Icon" class="card-icon" style="width: 90%; height: 90%; object-fit: contain; display: block; margin: 0 auto;" />
