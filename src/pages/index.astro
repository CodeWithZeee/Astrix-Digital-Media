---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ValueProposition from '../components/ValueProposition.astro';
import Features from '../components/Features.astro';
import HowItWorks from '../components/HowItWorks.astro';
import CaseStudies from '../components/CaseStudies.astro';
import Pricing from '../components/Pricing.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import LightBackground from '../components/LightBackground.astro';
import DarkBackground from '../components/DarkBackground.astro';
---
<!-- g -->
<Layout title="Astrix Digital Media - AI Growth Infrastructure for Business Development">
  <!-- Global Backgrounds -->
  <LightBackground />
  <DarkBackground />
  
  <Header />
  <main>
    <Hero />
    <ValueProposition />
    <Features />
    <HowItWorks />
    <CaseStudies />
    <Pricing />
    <Contact />
    <section id="privacy-policy" class="py-20 section-bg">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-3xl font-bold section-title mb-4">Privacy Policy</h2>
        <p class="text-lg section-text mb-6">Learn how we protect your data and privacy as you use our platform.</p>
        <a href="/privacy-policy" class="inline-block section-cta">Read Full Policy</a>
      </div>
    </section>
    <section id="terms-of-service" class="py-20 section-bg-alt">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-3xl font-bold section-title mb-4">Terms of Service</h2>
        <p class="text-lg section-text mb-6">Understand the rules and conditions for using Astrix Digital Media.</p>
        <a href="/terms-of-service" class="inline-block section-cta">Read Full Terms</a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  /* Light theme styles */
  .section-bg {
    background: rgba(249, 250, 251, 0.8);
    backdrop-filter: blur(10px);
    transition: all 0.5s ease;
  }

  .section-bg-alt {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    transition: all 0.5s ease;
  }

  .section-title {
    color: #1f2937;
    transition: color 0.5s ease;
  }

  .section-text {
    color: #4b5563;
    transition: color 0.5s ease;
  }

  .section-cta {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
  }

  .section-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
  }

  /* Light theme text color for text-center mb-16 */
  .text-center.mb-16 h2.text-gray-900 {
    color: black !important;
  }
  
  .text-center.mb-16 p.text-gray-600 {
    color: black !important;
  }

  /* Dark theme overrides - keep original colors */
  [data-theme="dark"] .text-center.mb-16 h2.text-gray-900 {
    color: white !important;
  }
  
  [data-theme="dark"] .text-center.mb-16 p.text-gray-600 {
    color: #d1d5db !important;
  }

  /* Dark theme styles */
  [data-theme="dark"] .section-bg {
    background: rgba(17, 24, 39, 0.8);
  }

  [data-theme="dark"] .section-bg-alt {
    background: rgba(31, 41, 55, 0.8);
  }

  [data-theme="dark"] .section-title {
    color: white;
  }

  [data-theme="dark"] .section-text {
    color: #d1d5db;
  }

  [data-theme="dark"] .section-cta {
    background: linear-gradient(135deg, #06b6d4, #0284c7);
    box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
  }

  [data-theme="dark"] .section-cta:hover {
    box-shadow: 0 8px 25px rgba(6, 182, 212, 0.4);
  }
</style> 