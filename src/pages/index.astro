---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ValueProposition from '../components/ValueProposition.astro';
import Features from '../components/Features.astro';
import HowItWorks from '../components/HowItWorks.astro';
import CaseStudies from '../components/CaseStudies.astro';
import Pricing from '../components/Pricing.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---
<!-- g -->
<Layout title="Astrix Digital Media - AI Growth Infrastructure for Business Development">
  <Header />
  <main>
    <Hero />
    <ValueProposition />
    <Features />
    <HowItWorks />
    <CaseStudies />
    <Pricing />
    <Contact />
    <section id="privacy-policy" class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Privacy Policy</h2>
        <p class="text-lg text-gray-600 mb-6">Learn how we protect your data and privacy as you use our platform.</p>
        <a href="/privacy-policy" class="inline-block bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors duration-200">Read Full Policy</a>
      </div>
    </section>
    <section id="terms-of-service" class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Terms of Service</h2>
        <p class="text-lg text-gray-600 mb-6">Understand the rules and conditions for using Astrix Digital Media.</p>
        <a href="/terms-of-service" class="inline-block bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors duration-200">Read Full Terms</a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>