      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .prose h2 {
    @apply text-2xl font-bold text-gray-900 dark:text-white mt-8 mb-4;
  }
  
  .prose h3 {
    @apply text-xl font-semibold text-gray-900 dark:text-white mt-6 mb-3;
  }
  
  .prose p {
    @apply text-gray-700 dark:text-gray-300 mb-4 leading-relaxed;
  }
  
  .prose ul {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply text-gray-700 dark:text-gray-300 mb-2;
  }
  
  .prose .bg-gray-50 {
    @apply dark:bg-neutral-800 dark:text-gray-200;
  }
  
  .prose .bg-blue-50 {
    @apply dark:bg-blue-950 dark:text-blue-200;
  }
  
  .prose .border-blue-400 {
    @apply dark:border-blue-600;
  }
</style>