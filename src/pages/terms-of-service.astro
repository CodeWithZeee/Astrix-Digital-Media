    <section class="py-16 bg-white dark:bg-neutral-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="prose prose-lg max-w-none dark:prose-invert bg-white/90 dark:bg-neutral-900/90 rounded-2xl shadow-xl p-8 border border-gray-100 dark:border-neutral-800">
          
